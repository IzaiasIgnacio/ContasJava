<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
	
	<class name="entity.Gastos" table="gastos">
		<id name="id" column="id" type="java.lang.Integer">
			<generator class="increment" />
		</id>

		<property name="descricao" column="descricao" type="java.lang.String" not-null="true" />
		<property name="valor" column="valor" type="java.lang.Double" not-null="true" />
		<property name="parcela" column="parcela" type="java.lang.Integer" not-null="true" />
		<property name="total_parcelas" column="total_parcelas" type="java.lang.Integer" not-null="true" />
		<property name="data" column="data" type="date" not-null="true" />
		<property name="tipo" column="tipo" type="java.lang.String" not-null="true" />
		
	</class>
</hibernate-mapping>
